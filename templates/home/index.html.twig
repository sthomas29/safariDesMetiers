        <!-- Three columns of text below the carousel -->
        <div class="text-center row justify-content-center">
            {% for animal in animaux %}
                <div class="carte card col-sm-2 col-md-4 {{ animal.regimeAlimentaire }}">
                    <h5 class="card-title">{{ animal.nom }}</h5>
                    <div class="img-card">
                        <img class="card-img-top " src="{{ asset('assets/img/animaux/' ~ animal.photo) }}"
                             alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <p class="overflow-ellipsis">{{ animal.description }}</p>
                    </div><!-- /.col-lg-4 -->
                    <div class="card-more"><a class="btn-sm" href="{{ path('animal')}}/{{ animal.nom }}"  role="button">Plus d'infos
                            &raquo;</a></div>
                    {# //btn btn-secondary #}
                </div>
            {% endfor %}
        </div>
