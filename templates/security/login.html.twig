{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% block content %}
        <div class="login-form-group">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mt-3 mb-3 font-weight-normal">Atelier DÃ©veloppement</h1>

            <fieldset>
            <label class="login-form" for="inputEmail">Email</label>

            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="login-form form-control"
                   autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="login-form form-control"
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html
            #}
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            <div id="btnGroup">
                <button class="btn btn-sm " type="submit">Se connecter</button>
                <a href="/inscription" class="btn btn-sm ">Inscription</a>
            </div>
            </fieldset>
        </form>
        </div>
    {% endblock %}
{% endblock %}

{% block footer %}{% endblock %}
